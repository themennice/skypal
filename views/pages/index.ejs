<!DOCTYPE html>

<html>

<head>
  <% include ../partials/header.ejs %>
  <meta charset="UTF-8"/>

</head>
<body>
  <% include ../partials/nav.ejs %>
  <section class="WelcomeSection">
    <h1>Welcome to SkyPal</h1>
    <a href="#ticketsearch"><button type="button" name="button">Start your journey</button></a>
    <a href="/chat"><button name="chatbutton">Chat with other users</button></a>
  </section>

  <section class="TicketSearch">
    <div class="topMargin">
      <fieldset class="TransparentBar">
        <form action="/" method="post" >
          <p class="inpuGrp">
          <label class="topLeftLbl">From</label>
          <select type="text" name="origin" class="MedInput" placeholder="City or town">
    	      <option value="france">France</option>
    	      <option value="canada">Canada</option>
    	      <option value="usa">USA</option>
    	    </select>
          </p>
          <p class="inpuGrp">
          <label class="topLeftLbl">To</label>
          <select type="text" name="destination" class="MedInput" placeholder="City or town">
    	      <option value="france">France</option>
    	      <option value="canada">Canada</option>
    	      <option value="usa">USA</option>
    	    </select>
          </p>
          <p class="inpuGrp">
          <label class="topLeftLbl">DepartureDate</label>
          <input type="date" name="date" class="MedInput" placeholder="date">
          </p>
          <button type="submit" name="submit"><h2>submit </h2></button>
        </form>

      </fieldset>
    </div>
    <%if(message){%>
      <h1><%=message%></h1>
      <%}%>
    <%for (i=0; i < n.length; i++){ %>
					<% m = n[i];%>
    <!-- slider for differernt cards -->

    <div id="ticketsearch" class="Slider">
      <div style="height: 500px;">
        <div class="InfoCard">
          <img src="empty-avatar.png" alt="avatar" class="avatar">
          <p><%=m.fname%></p>
          <p>I'm a Cheff at a good resturant</p> <br>
          <p>Flying Economy Class via <%=m.airline%></p>
          <button class="DynamicSubmitBtn">book a flight with <%=m.fname%></button>
        </div>
      </div>
      <% } %>
    </div>
  </section>


  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TimelineLite.min.js" ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/TweenLite.min.js" ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/plugins/CSSPlugin.min.js" ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.3/plugins/BezierPlugin.min.js" ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.7/ScrollMagic.min.js" ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.7/plugins/debug.addIndicators.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.7/plugins/animation.gsap.min.js"></script>
</body>
</html>
