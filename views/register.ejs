<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include partials/header.ejs %>
    <meta charset="utf-8">
    <title>Register</title>
    <link rel="stylesheet" href="./stylesheets/register.css" />
    <script src="checkCriteria.js" defer></script>
  </head>
  <body>
  <% include partials/nav.ejs %>
  <img src="SkyBG.jpg" alt="background" class="bg" />
    <!--  Facebook SDK -->
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId            : 'your-app-id',
          autoLogAppEvents : true,
          xfbml            : true,
          version          : 'v3.3'
        });
      };
    </script>
    <script async defer src="https://connect.facebook.net/en_US/sdk.js"></script>
    <!-- register using email-->
    <h1 name="title">Welcome to SkyPal</h1>
  <br>
    <form name="registerForm" onsubmit="return validateForm()" action="/register" method="post" >
      <fieldset>
        <% if(warning !== undefined && warning != "") { %>
          <div class="infoBubble">
            <%= warning %>
          </div>
          <% } %>
        <a href="/login"><% if (message) { %>
          <div class="alert alert-success"><%= message %></div>
        <% } %></a>
        <p>
            <input type = "email" class ="Uname"
                   name = "email" placeholder="Email address" required>
          </p>
          <p>
              <input type = "text" class ="Uname"
                     name = "username" placeholder="Username" required>
            </p>
          <p>
              <input type = "password" class="password" id = "password"
                     name = "password" placeholder="Password" required>
          </p>
          <p>
              <input type = "password" class="password" id = "confirmPassword"
                     name = "confirmPassword" placeholder="Confirm Password" required>
          </p>
          <button type="submit" name="register"><h2>Register </h2></button>
      </fieldset>
      <fieldset name="loginBtn">
        <button type="submit" name="login" ><h2><a href="login">I already have an account</a></h2></button>
      </fieldset>
    </form><
    <!--TTEST CASE: <form action="/sendEmail" method="post"><button name="test">test email</button></form>
    <p class="citation">Photo by Ross Parmly on Unsplash</p>!-->

  </body>

</html>
